<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>academia-tcc</display-name>

	<welcome-file-list>
		<welcome-file>home.html</welcome-file>
	</welcome-file-list>

	<!-- Tratamento padrÃ£o de erros, modo declarativo -->
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/WEB-INF/paginas-de-erros/erro.jsp</location>
	</error-page>

	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/paginas-de-erros/pagina-nao-encontrada.jsp</location>
	</error-page>

</web-app>